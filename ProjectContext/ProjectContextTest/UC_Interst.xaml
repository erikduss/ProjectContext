<UserControl x:Class="ProjectContextTest.UC_Interst"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectContextTest"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">
    <Grid MaxWidth="350" HorizontalAlignment="Left">
        <TextBox Name="txt_interest" FontSize="24" Height="50" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="300" BorderThickness="0" Padding="10,0,0,0">
        <TextBox.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resources/InterestsTypebar.png"/>
        </TextBox.Background>
        </TextBox>
        <Button Name="btn_Remove" Width="50" Height="50" Margin="300,0,0,0" FontSize="24" BorderThickness="0">
            <Button.OpacityMask>
                <ImageBrush ImageSource="pack://application:,,,/Resources/delete.png"/>
            </Button.OpacityMask>
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/Resources/delete.png"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
